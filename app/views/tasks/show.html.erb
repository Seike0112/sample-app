<div class="container">
      
 <h1>タスク詳細</h1>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered" id="table-task">
        <tbody>
          <tr>
            <th class="active col-md-2">ID</th>
            <td class="col-md-10"><%= @task.id %></td>
          </tr>
          <tr>
            <th class="active">名称</th>
            <td><%= @task.task_name %></td>
          </tr>
          <tr>
            <th class="active">詳細</th>
            <td>
              <a><%= @task.note %></a>
            </td>
          </tr>
          <tr>
            <th class="active">作成日</th>
            <td><%= @task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          </tr>
          <tr>
            <th class="active">更新日</th>
            <td><%= @task.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          </tr>
        </tbody>
      </table>
      
      <div>
        <% if current_user.admin? %>
          <%= link_to "編集", edit_task_path(@task),  class: "btn btn-lg btn-success" %>
          <%= link_to "削除", @task, method: :delete, date: { confirm: "削除してよろしいですか？" },class: "btn btn-lg btn-danger" %>
        <% end %>
      </div>
    </div>    
  </div>

      
</div>