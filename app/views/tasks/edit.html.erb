<div class="container">
      
  <h1>タスク編集</h1>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @task, local: true) do |f| %>
          <%= render 'shared/error_messages_task' %>
          
          
            <%= f.label "名称", class: "label-form" %>
            <%= f.text_field :task_name, class: "form-control" %>
      
            <%= f.label "詳細", class: "label-form" %>
            <%= f.text_area :note, class: "form-control", rows: 5 %>
            
            <%= f.submit "更新", class: "btn btn-lg btn-primary btn-form " %>
            <%= f.submit "キャンセル", class: "btn btn-default btn-form" %>
          
          
        <% end %>  
      </div>
    </div>
      
</div>