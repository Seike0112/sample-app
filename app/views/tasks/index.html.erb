<div class="container">
      
  <h1><%= current_user.name %>のタスク一覧</h1>


  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <a class="btn btn-lg btn-primary pull-right" href="tasks/new">タスク新規作成</a>
      <table class="table table-hover" id="table-tasks">
        <thead>
          <tr>
            <th><%= Task.human_attribute_name "名称" %></th>
            <th><%= Task.human_attribute_name "作成日" %></th>
            <th></th>
          </tr>
        </thead>
  
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td>
                <%= link_to task.task_name, task %>
              </td>
              <td>
                <%= task.created_at.strftime("%Y-%m-%d %H:%M") %>
              </td>
              <td>
                <% if current_user.admin? %>
                  <%= link_to "編集", edit_task_path(task),  class: "btn btn-lg btn-success" %>
                  <%= link_to "削除", task, method: :delete, date: { confirm: "削除してよろしいですか？" },class: "btn btn-lg btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
      
</div>